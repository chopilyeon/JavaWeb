<script>
$(document).ready(function(){ 
	$('.mon').mouseover(function(){
		$('.mon').html('<mark>월요일</mark')
		$('.mon').css('background-color','white')
		
	})
	$('.tue').mouseover(function(){
		$('.tue').html('<mark>화요일</mark')
	})
	$('.wed').mouseover(function(){
